modules = ["web", "python-3.12", "nodejs-22"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "cd apps/web && npm run start"]
build = ["bash", "-c", "cd apps/web && npm install && npm run build"]
