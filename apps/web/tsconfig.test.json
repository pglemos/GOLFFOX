{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "types": [
            "jest",
            "@testing-library/jest-dom",
            "node"
        ]
    },
    "include": [
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/*.spec.ts",
        "**/*.spec.tsx",
        "**/__tests__/**/*.ts",
        "**/__tests__/**/*.tsx",
        "jest.setup.js"
    ],
    "exclude": [
        "node_modules"
    ]
}