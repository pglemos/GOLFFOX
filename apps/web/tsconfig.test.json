{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "types": [
            "jest",
            "@testing-library/jest-dom",
            "node"
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./*"
            ],
            "@/components/*": [
                "./components/*"
            ],
            "@/lib/*": [
                "./lib/*"
            ],
            "@/server/*": [
                "./server/*"
            ],
            "@shared/*": [
                "../../shared/*"
            ],
            "@/hooks/*": [
                "./hooks/*"
            ],
            "@/app/*": [
                "./app/*"
            ]
        }
    },
    "include": [
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/*.spec.ts",
        "**/*.spec.tsx",
        "**/__tests__/**/*.ts",
        "**/__tests__/**/*.tsx",
        "lib/**/*.ts",
        "lib/**/*.tsx",
        "components/**/*.ts",
        "components/**/*.tsx",
        "hooks/**/*.ts",
        "hooks/**/*.tsx",
        "app/**/*.ts",
        "app/**/*.tsx",
        "jest.setup.js",
        "types/**/*.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}