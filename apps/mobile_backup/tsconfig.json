{
    "compilerOptions": {
        "strict": true,
        "target": "ESNext",
        "lib": [
            "ESNext"
        ],
        "jsx": "react-native",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "noEmit": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@/components/*": [
                "src/components/*"
            ],
            "@/services/*": [
                "src/services/*"
            ],
            "@/auth/*": [
                "src/auth/*"
            ],
            "@/features/*": [
                "src/features/*"
            ],
            "@/utils/*": [
                "src/utils/*"
            ]
        }
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        ".expo/types/**/*.ts",
        "expo-env.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}